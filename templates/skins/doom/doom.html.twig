            <div class="col">
                {{navbar|raw}}
            </div>

            <div class="col-10">
                {% include asset(page ~ '.html.twig') %}
            </div>

            <div class="col">
                {% if uuid.hasIdentifier() %}
                    {% include 'parts/characterStats.html.twig' %}
