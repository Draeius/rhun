{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ book.content }}</td>
            </tr>
            <tr>
                <th>Activated</th>
                <td>{{ book.activated ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ListOrder</th>
                <td>{{ book.listOrder }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('book_index') }}">back to list</a>

    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>

    {{ include('editors/book/_delete_form.html.twig') }}
{% endblock %}
